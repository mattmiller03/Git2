<Page x:Class="UiDesktopApp2.Views.Pages.ConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Connection">

    <Grid Style="{StaticResource PageContentGrid}">
        <ScrollViewer>
            <StackPanel Style="{StaticResource SectionStackPanel}">

                <!-- Page Title -->
                <TextBlock Text="vCenter Connection Management" 
                          Style="{StaticResource TitleTextBlockStyle}" />

                <!-- Source vCenter Section -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel Style="{StaticResource FormStackPanel}">
                        <TextBlock Text="Source vCenter" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Label Content="Server Address:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:TextBox Text="{Binding SourceServerAddress, Mode=TwoWay}"
                                   PlaceholderText="vcenter01.domain.com"
                                   Style="{StaticResource FormTextBox}" />

                        <Label Content="Username:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:TextBox Text="{Binding SourceUsername, Mode=TwoWay}"
                                   PlaceholderText="administrator@vsphere.local"
                                   Style="{StaticResource FormTextBox}" />

                        <Label Content="Password:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:PasswordBox Password="{Binding SourcePassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource FormPasswordBox}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <ui:Button Content="Test Connection" 
                                      Style="{StaticResource PrimaryButton}"
                                      Command="{Binding TestSourceConnectionCommand}" 
                                      Margin="0,0,10,0" />
                            <ui:Button Content="Save Profile" 
                                      Style="{StaticResource SecondaryButton}"
                                      Command="{Binding SaveSourceProfileCommand}" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Destination vCenter Section -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel Style="{StaticResource FormStackPanel}">
                        <TextBlock Text="Destination vCenter" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Label Content="Server Address:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:TextBox Text="{Binding DestinationServerAddress, Mode=TwoWay}"
                                   PlaceholderText="vcenter02.domain.com"
                                   Style="{StaticResource FormTextBox}" />

                        <Label Content="Username:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:TextBox Text="{Binding DestinationUsername, Mode=TwoWay}"
                                   PlaceholderText="administrator@vsphere.local"
                                   Style="{StaticResource FormTextBox}" />

                        <Label Content="Password:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:PasswordBox Password="{Binding DestinationPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource FormPasswordBox}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <ui:Button Content="Test Connection" 
                                      Style="{StaticResource PrimaryButton}"
                                      Command="{Binding TestDestinationConnectionCommand}" 
                                      Margin="0,0,10,0" />
                            <ui:Button Content="Save Profile" 
                                      Style="{StaticResource SecondaryButton}"
                                      Command="{Binding SaveDestinationProfileCommand}" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Saved Profiles Section -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="Saved Connection Profiles" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <TextBlock Text="Select a previously saved connection profile" 
                                  Style="{StaticResource BodyTextBlockStyle}" />

                        <Label Content="Profile:" 
                               Style="{StaticResource FormLabel}" />
                        <ComboBox ItemsSource="{Binding SavedProfiles}"
                                  SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                                  Style="{StaticResource FormComboBox}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <ui:Button Content="Load Profile" 
                                      Style="{StaticResource PrimaryButton}"
                                      Command="{Binding LoadProfileCommand}" 
                                      Margin="0,0,10,0" />
                            <ui:Button Content="Delete Profile" 
                                      Style="{StaticResource DangerButton}"
                                      Command="{Binding DeleteProfileCommand}" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Status Messages -->
                <ui:InfoBar Title="Connection Status" 
                           Message="{Binding StatusMessage}" 
                           Style="{StaticResource InfoMessage}" 
                           IsOpen="{Binding IsStatusOpen}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
