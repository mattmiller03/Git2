<Page x:Class="UiDesktopApp2.Views.Pages.ConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:UiDesktopApp2.Converters"
      xmlns:viewModels="clr-namespace:UiDesktopApp2.ViewModels.Pages"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:ConnectionViewModel}"
      Title="Connection" Height="1547">
    <Page.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Page.Resources>
    <Grid Style="{StaticResource PageContentGrid}">
        <ScrollViewer>
            <StackPanel Style="{StaticResource SectionStackPanel}" Height="1445">

                <!-- Page Title -->
                <TextBlock Text="vCenter Connection Management" 
                          Style="{StaticResource TitleTextBlockStyle}" />

                <!-- Source vCenter Section -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel Style="{StaticResource FormStackPanel}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Source vCenter" 
                                      Style="{StaticResource SubtitleTextBlockStyle}"
                                      Grid.Column="0" />

                            <ui:Button Content="Copy to Destination" 
                                      Style="{StaticResource SecondaryButton}"
                                      Command="{Binding CopySourceToDestinationCommand}"
                                      Grid.Column="1" />
                        </Grid>

                        <Label Content="vCenter Server:" 
                               Style="{StaticResource FormLabel}" />
                        <ComboBox ItemsSource="{Binding AvailableServers}"
                                  SelectedItem="{Binding SelectedSourceServer, Mode=TwoWay}"
                                  Style="{StaticResource FormComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="4">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="{Binding Address}" 
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="11"
                                                  FontStyle="Italic"
                                                  Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Custom server address input (shown when Custom Server is selected) -->
                        <Label Content="Custom Server Address:" 
                               Style="{StaticResource FormLabel}"
                               Visibility="{Binding SelectedSourceServer.Name, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Custom Server'}" />
                        <ui:TextBox Text="{Binding SelectedSourceServer.Address, Mode=TwoWay}"
                                   PlaceholderText="Enter custom vCenter address"
                                   Style="{StaticResource FormTextBox}"
                                   Visibility="{Binding SelectedSourceServer.Name, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Custom Server'}" />

                        <Label Content="Username:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:TextBox Text="{Binding SourceUsername, Mode=TwoWay}"
                                   PlaceholderText="administrator@vsphere.local"
                                   Style="{StaticResource FormTextBox}" />

                        <Label Content="Password:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:PasswordBox Password="{Binding SourcePassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource FormPasswordBox}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <ui:Button Content="Test Connection" 
                                      Style="{StaticResource PrimaryButton}"
                                      Command="{Binding TestSourceConnectionCommand}" 
                                      Margin="0,0,10,0" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Destination vCenter Section -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel Style="{StaticResource FormStackPanel}">
                        <TextBlock Text="Destination vCenter" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Label Content="vCenter Server:" 
                               Style="{StaticResource FormLabel}" />
                        <ComboBox ItemsSource="{Binding AvailableServers}"
                                  SelectedItem="{Binding SelectedDestinationServer, Mode=TwoWay}"
                                  Style="{StaticResource FormComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="4">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="{Binding Address}" 
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="11"
                                                  FontStyle="Italic"
                                                  Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Custom server address input (shown when Custom Server is selected) -->
                        <Label Content="Custom Server Address:" 
                               Style="{StaticResource FormLabel}"
                               Visibility="{Binding SelectedDestinationServer.Name, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Custom Server'}" />
                        <ui:TextBox Text="{Binding SelectedDestinationServer.Address, Mode=TwoWay}"
                                   PlaceholderText="Enter custom vCenter address"
                                   Style="{StaticResource FormTextBox}"
                                   Visibility="{Binding SelectedDestinationServer.Name, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Custom Server'}" />

                        <Label Content="Username:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:TextBox Text="{Binding DestinationUsername, Mode=TwoWay}"
                                   PlaceholderText="administrator@vsphere.local"
                                   Style="{StaticResource FormTextBox}" />

                        <Label Content="Password:" 
                               Style="{StaticResource FormLabel}" />
                        <ui:PasswordBox Password="{Binding DestinationPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource FormPasswordBox}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <ui:Button Content="Test Connection" 
                                      Style="{StaticResource PrimaryButton}"
                                      Command="{Binding TestDestinationConnectionCommand}" 
                                      Margin="0,0,10,0" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Replace the entire Saved Profiles Section with this -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="Profile Management" 
                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <TextBlock Text="Manage your saved connection profiles" 
                  Style="{StaticResource BodyTextBlockStyle}" />

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                            <ui:Button Content="Manage Profiles" 
                      Style="{StaticResource PrimaryButton}"
                      Command="{Binding ManageProfilesCommand}">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="Settings24" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Status Messages -->
                <ui:InfoBar Title="Connection Status" 
                           Message="{Binding StatusMessage}" 
                           Style="{StaticResource InfoMessage}" 
                           IsOpen="{Binding IsStatusOpen}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
