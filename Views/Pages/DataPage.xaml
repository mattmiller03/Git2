<Page x:Class="UiDesktopApp2.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="clr-namespace:UiDesktopApp2.ViewModels.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:DataViewModel}"
      Title="Data">

    <Grid Style="{StaticResource PageContentGrid}">
        <ScrollViewer>
            <StackPanel Style="{StaticResource SectionStackPanel}">

                <!-- Page Title -->
                <TextBlock Text="VM Inventory Data" 
                          Style="{StaticResource TitleTextBlockStyle}" />

                <!-- Filters and Search -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="Filters &amp; Search" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid Margin="0,16,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- First Row -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Content="vCenter:" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Column="0" />
                                <ComboBox x:Name="VcenterFilterComboBox" 
                                         Style="{StaticResource FormComboBox}"
                                         Grid.Column="1"
                                         Margin="0">
                                    <ComboBoxItem Content="All vCenters" IsSelected="True" />
                                    <ComboBoxItem Content="vcenter01.domain.com" />
                                    <ComboBoxItem Content="vcenter02.domain.com" />
                                </ComboBox>

                                <Label Content="Power State:" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Column="2"
                                       Margin="16,0,8,0" />
                                <ComboBox x:Name="PowerStateFilterComboBox" 
                                         Style="{StaticResource FormComboBox}"
                                         Grid.Column="3"
                                         Margin="0">
                                    <ComboBoxItem Content="All States" IsSelected="True" />
                                    <ComboBoxItem Content="Powered On" />
                                    <ComboBoxItem Content="Powered Off" />
                                    <ComboBoxItem Content="Suspended" />
                                </ComboBox>

                                <Label Content="OS Type:" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Column="4"
                                       Margin="16,0,8,0" />
                                <ComboBox x:Name="OsTypeFilterComboBox" 
                                         Style="{StaticResource FormComboBox}"
                                         Grid.Column="5"
                                         Margin="0">
                                    <ComboBoxItem Content="All OS" IsSelected="True" />
                                    <ComboBoxItem Content="Windows" />
                                    <ComboBoxItem Content="Linux" />
                                    <ComboBoxItem Content="Other" />
                                </ComboBox>
                            </Grid>

                            <!-- Second Row -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Content="Search:" 
                                       Style="{StaticResource FormLabel}"
                                       Grid.Column="0" />
                                <ui:TextBox x:Name="SearchTextBox" 
                                           PlaceholderText="Search VMs by name, cluster, or datastore..."
                                           Style="{StaticResource FormTextBox}"
                                           Grid.Column="1"
                                           Margin="0" />

                                <StackPanel Orientation="Horizontal" 
                                           Grid.Column="2"
                                           Margin="16,0,0,0">
                                    <ui:Button Content="Refresh" 
                                              Style="{StaticResource SecondaryButton}"
                                              Margin="0" />
                                    <ui:Button Content="Export" 
                                              Style="{StaticResource SecondaryButton}" />
                                    <ui:Button Content="Clear Filters" 
                                              Style="{StaticResource SecondaryButton}" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Summary Statistics -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="Inventory Summary" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Total VMs -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="247" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center" />
                                <TextBlock Text="Total VMs" 
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Powered On -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="189" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center"
                                          Foreground="LimeGreen" />
                                <TextBlock Text="Powered On" 
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Powered Off -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="52" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center"
                                          Foreground="Gray" />
                                <TextBlock Text="Powered Off" 
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Windows -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="134" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center"
                                          Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                                <TextBlock Text="Windows" 
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Linux -->
                            <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                                <TextBlock Text="113" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          HorizontalAlignment="Center"
                                          Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                                <TextBlock Text="Linux" 
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- VM Data Grid -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Virtual Machines" 
                                      Style="{StaticResource SubtitleTextBlockStyle}"
                                      Grid.Column="0" />

                            <StackPanel Orientation="Horizontal" 
                                       Grid.Column="1">
                                <CheckBox Content="Show only migration candidates" 
                                         Style="{StaticResource FormCheckBox}"
                                         Margin="0,0,16,0" />
                                <TextBlock Text="Showing 25 of 247 VMs" 
                                          Style="{StaticResource CaptionTextBlockStyle}"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>

                        <DataGrid x:Name="VmDataGrid" 
                                 Style="{StaticResource StandardDataGrid}"
                                 Height="400"
                                 Margin="0,16,0,0">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Select" Width="60" />
                                <DataGridTextColumn Header="VM Name" Width="150" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Power State" Width="100" Binding="{Binding PowerState}" />
                                <DataGridTextColumn Header="Guest OS" Width="120" Binding="{Binding GuestOS}" />
                                <DataGridTextColumn Header="vCPU" Width="60" Binding="{Binding CpuCount}" />
                                <DataGridTextColumn Header="Memory (GB)" Width="100" Binding="{Binding MemoryGB}" />
                                <DataGridTextColumn Header="Storage (GB)" Width="100" Binding="{Binding StorageGB}" />
                                <DataGridTextColumn Header="Cluster" Width="120" Binding="{Binding Cluster}" />
                                <DataGridTextColumn Header="Host" Width="120" Binding="{Binding Host}" />
                                <DataGridTextColumn Header="Datastore" Width="120" Binding="{Binding Datastore}" />
                                <DataGridTextColumn Header="Network" Width="120" Binding="{Binding Network}" />
                                <DataGridTextColumn Header="Tools Status" Width="100" Binding="{Binding ToolsStatus}" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Data Grid Actions -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <ui:Button Content="Select All" 
                                          Style="{StaticResource SecondaryButton}"
                                          Margin="0" />
                                <ui:Button Content="Clear Selection" 
                                          Style="{StaticResource SecondaryButton}" />
                                <ui:Button Content="Add to Migration Queue" 
                                          Style="{StaticResource PrimaryButton}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <ui:Button Content="Export Selected" 
                                          Style="{StaticResource SecondaryButton}"
                                          Margin="0" />
                                <ui:Button Content="View Details" 
                                          Style="{StaticResource SecondaryButton}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Resource Usage -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Storage Usage -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Storage Usage by Datastore" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <StackPanel Margin="0,16,0,0">
                                <!-- Datastore 1 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <TextBlock Text="datastore-prod-01" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  HorizontalAlignment="Left"
                                                  Margin="0" />
                                        <TextBlock Text="2.1 TB / 4.0 TB" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  HorizontalAlignment="Right"
                                                  Margin="0" />
                                    </Grid>

                                    <ProgressBar Value="52.5" 
                                               Maximum="100"
                                               Height="8"
                                               Grid.Row="1"
                                               Margin="0,4,0,0" />
                                </Grid>

                                <!-- Datastore 2 -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <TextBlock Text="datastore-prod-02" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  HorizontalAlignment="Left"
                                                  Margin="0" />
                                        <TextBlock Text="3.8 TB / 4.0 TB" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  HorizontalAlignment="Right"
                                                  Margin="0" />
                                    </Grid>

                                    <ProgressBar Value="95" 
                                               Maximum="100"
                                               Height="8"
                                               Grid.Row="1"
                                               Margin="0,4,0,0" />
                                </Grid>

                                <!-- Datastore 3 -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <TextBlock Text="datastore-test-01" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  HorizontalAlignment="Left"
                                                  Margin="0" />
                                        <TextBlock Text="850 GB / 2.0 TB" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  HorizontalAlignment="Right"
                                                  Margin="0" />
                                    </Grid>

                                    <ProgressBar Value="42.5" 
                                               Maximum="100"
                                               Height="8"
                                               Grid.Row="1"
                                               Margin="0,4,0,0" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>

                    <!-- Network Distribution -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="VM Distribution by Network" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <StackPanel Margin="0,16,0,0">
                                <!-- Network 1 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Production-VLAN100" 
                                              Style="{StaticResource BodyTextBlockStyle}"
                                              Grid.Column="0"
                                              Margin="0" />
                                    <TextBlock Text="89 VMs" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Grid.Column="1"
                                              Margin="0" />
                                </Grid>

                                <!-- Network 2 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="DMZ-VLAN200" 
                                              Style="{StaticResource BodyTextBlockStyle}"
                                              Grid.Column="0"
                                              Margin="0" />
                                    <TextBlock Text="45 VMs" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Grid.Column="1"
                                              Margin="0" />
                                </Grid>

                                <!-- Network 3 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Development-VLAN300" 
                                              Style="{StaticResource BodyTextBlockStyle}"
                                              Grid.Column="0"
                                              Margin="0" />
                                    <TextBlock Text="67 VMs" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Grid.Column="1"
                                              Margin="0" />
                                </Grid>

                                <!-- Network 4 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Management-VLAN400" 
                                              Style="{StaticResource BodyTextBlockStyle}"
                                              Grid.Column="0"
                                              Margin="0" />
                                    <TextBlock Text="23 VMs" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Grid.Column="1"
                                              Margin="0" />
                                </Grid>

                                <!-- Network 5 -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Other Networks" 
                                              Style="{StaticResource BodyTextBlockStyle}"
                                              Grid.Column="0"
                                              Margin="0" />
                                    <TextBlock Text="23 VMs" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Grid.Column="1"
                                              Margin="0" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
