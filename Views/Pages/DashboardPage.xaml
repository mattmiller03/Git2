<Page x:Class="UiDesktopApp2.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:UiDesktopApp2.ViewModels.Pages"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:DashboardViewModel}"
      Title="Dashboard">

    <Grid Style="{StaticResource PageContentGrid}">
        <ScrollViewer>
            <StackPanel Style="{StaticResource SectionStackPanel}">

                <!-- Page Title -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Migration Dashboard" 
                                  Style="{StaticResource TitleTextBlockStyle}" />
                        <TextBlock x:Name="WelcomeTextBlock" 
                                  Text="Welcome back! Here's your migration overview."
                                  Style="{StaticResource BodyTextBlockStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                               Grid.Column="1"
                               VerticalAlignment="Top">
                        <ui:Button Content="New Migration" 
                                  Style="{StaticResource PrimaryButton}" />
                        <ui:Button Content="Refresh" 
                                  Style="{StaticResource SecondaryButton}" />
                    </StackPanel>
                </Grid>

                <!-- Connection Status Cards -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Source vCenter Status -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Source vCenter" 
                                          Style="{StaticResource SubtitleTextBlockStyle}"
                                          Grid.Column="0" />

                                <Ellipse Width="12" Height="12" 
                                        Fill="LimeGreen"
                                        Grid.Column="1"
                                        VerticalAlignment="Center" />
                            </Grid>

                            <TextBlock x:Name="SourceVcenterTextBlock" 
                                      Text="vcenter01.domain.com"
                                      Style="{StaticResource HeaderTextBlockStyle}" />

                            <TextBlock Text="Connected" 
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="LimeGreen" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="VMs: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="247" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Hosts: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="12" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Clusters: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="3" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>

                    <!-- Destination vCenter Status -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Destination vCenter" 
                                          Style="{StaticResource SubtitleTextBlockStyle}"
                                          Grid.Column="0" />

                                <Ellipse Width="12" Height="12" 
                                        Fill="LimeGreen"
                                        Grid.Column="1"
                                        VerticalAlignment="Center" />
                            </Grid>

                            <TextBlock x:Name="DestVcenterTextBlock" 
                                      Text="vcenter02.domain.com"
                                      Style="{StaticResource HeaderTextBlockStyle}" />

                            <TextBlock Text="Connected" 
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="LimeGreen" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="VMs: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="89" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Hosts: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="8" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Clusters: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="2" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>
                </Grid>

                <!-- Migration Statistics -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="Migration Statistics" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Total Migrations -->
                            <Border Grid.Column="0" 
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,1,0"
                                   Padding="0,0,16,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="24" 
                                              FontSize="32" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Center"
                                              Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                                    <TextBlock Text="Total Migrations" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- Successful -->
                            <Border Grid.Column="1" 
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,1,0"
                                   Padding="16,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="21" 
                                              FontSize="32" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Center"
                                              Foreground="LimeGreen" />
                                    <TextBlock Text="Successful" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- Failed -->
                            <Border Grid.Column="2" 
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,1,0"
                                   Padding="16,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="2" 
                                              FontSize="32" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Center"
                                              Foreground="OrangeRed" />
                                    <TextBlock Text="Failed" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- In Progress -->
                            <Border Grid.Column="3" 
                                   Padding="16,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="1" 
                                                  FontSize="32" 
                                                  FontWeight="Bold"
                                                  Foreground="Orange" />
                                        <ui:ProgressRing Width="20" Height="20" 
                                                        IsIndeterminate="True"
                                                        Margin="8,8,0,0" />
                                    </StackPanel>
                                    <TextBlock Text="In Progress" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Current Activity & Recent Migrations -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Current Activity -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Current Activity" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- Active Migration -->
                            <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="1"
                                   CornerRadius="4"
                                   Padding="12"
                                   Margin="0,8,0,8">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="WebServer03" 
                                                  Style="{StaticResource HeaderTextBlockStyle}"
                                                  Grid.Column="0" />

                                        <TextBlock Text="vMotion" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  Grid.Column="1"
                                                  VerticalAlignment="Center" />
                                    </Grid>

                                    <ProgressBar Value="65" 
                                               Maximum="100"
                                               Height="8"
                                               Margin="0,8,0,4" />

                                    <Grid>
                                        <TextBlock Text="Migrating storage (65%)" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  HorizontalAlignment="Left" />
                                        <TextBlock Text="2m 15s remaining" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Queue Status -->
                            <TextBlock Text="Queue: 3 VMs pending" 
                                      Style="{StaticResource BodyTextBlockStyle}" />

                            <ui:Button Content="View All Active" 
                                      Style="{StaticResource SecondaryButton}"
                                      HorizontalAlignment="Left"
                                      Margin="0,12,0,0" />
                        </StackPanel>
                    </ui:Card>

                    <!-- Recent Migrations -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Recent Migrations" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- Recent Items -->
                            <StackPanel Margin="0,8,0,0">
                                <!-- Migration Item 1 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" 
                                            Fill="LimeGreen"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0" />

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="DatabaseServer01" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                        <TextBlock Text="Completed 15 minutes ago" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>

                                    <TextBlock Text="Success" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="LimeGreen"
                                              Grid.Column="2"
                                              VerticalAlignment="Center" />
                                </Grid>

                                <!-- Migration Item 2 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" 
                                            Fill="LimeGreen"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0" />

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="WebServer02" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                        <TextBlock Text="Completed 1 hour ago" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>

                                    <TextBlock Text="Success" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="LimeGreen"
                                              Grid.Column="2"
                                              VerticalAlignment="Center" />
                                </Grid>

                                <!-- Migration Item 3 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="8" Height="8" 
                                            Fill="OrangeRed"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0" />

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="FileServer01" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                        <TextBlock Text="Failed 2 hours ago" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>

                                    <TextBlock Text="Failed" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              Foreground="OrangeRed"
                                              Grid.Column="2"
                                              VerticalAlignment="Center" />
                                </Grid>
                            </StackPanel>

                            <ui:Button Content="View Migration History" 
                                      Style="{StaticResource SecondaryButton}"
                                      HorizontalAlignment="Left"
                                      Margin="0,12,0,0" />
                        </StackPanel>
                    </ui:Card>
                </Grid>

                <!-- System Health & Alerts -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- System Health -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="System Health" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <Grid Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- PowerCLI Status -->
                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="PowerCLI" 
                                              Style="{StaticResource HeaderTextBlockStyle}" />
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" 
                                                Fill="LimeGreen"
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0" />
                                        <TextBlock Text="Connected" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>
                                    <TextBlock Text="Version 13.2.1" 
                                              Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>

                                <!-- Memory Usage -->
                                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                    <TextBlock Text="Memory Usage" 
                                              Style="{StaticResource HeaderTextBlockStyle}" />
                                    <ProgressBar Value="34" 
                                               Maximum="100"
                                               Height="8"
                                               Margin="0,4,0,4" />
                                    <TextBlock Text="346 MB / 1024 MB" 
                                              Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>

                                <!-- Log Size -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Log Files" 
                                              Style="{StaticResource HeaderTextBlockStyle}" />
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" 
                                                Fill="Orange"
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0" />
                                        <TextBlock Text="15.7 MB" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>
                                    <TextBlock Text="Archive recommended" 
                                              Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ui:Card>

                    <!-- Quick Actions -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <StackPanel Margin="0,16,0,0">
                                <ui:Button Content="Test Connections" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8" />

                                <ui:Button Content="Backup Config" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8" />

                                <ui:Button Content="View Logs" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8" />

                                <ui:Button Content="Export Report" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8" />
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>
                </Grid>

                <!-- Status Bar -->
                <ui:InfoBar x:Name="DashboardStatusInfo" 
                           Title="System Status" 
                           Message="All systems operational. Last updated: 2 minutes ago" 
                           Style="{StaticResource SuccessMessage}" 
                           IsOpen="True" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
