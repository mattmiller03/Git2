<Page x:Class="UiDesktopApp2.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:UiDesktopApp2.ViewModels.Pages"
      xmlns:converters="clr-namespace:UiDesktopApp2.Converters"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:DashboardViewModel}"
      Title="Dashboard">

    <Grid Style="{StaticResource PageContentGrid}">
        <ScrollViewer>
            <StackPanel Style="{StaticResource SectionStackPanel}">

                <!-- Page Title -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Migration Dashboard" 
                                  Style="{StaticResource TitleTextBlockStyle}" />
                        <TextBlock Text="Welcome back! Here's your migration overview."
                                  Style="{StaticResource BodyTextBlockStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                               Grid.Column="1"
                               VerticalAlignment="Top">
                        <ui:Button Content="New Migration" 
                                  Style="{StaticResource PrimaryButton}" />
                        <ui:Button Content="Refresh" 
                                  Style="{StaticResource SecondaryButton}"
                                  Command="{Binding RefreshCommand}" />
                    </StackPanel>
                </Grid>

                <!-- Connection Status Cards -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Source vCenter Status -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Source vCenter" 
                                          Style="{StaticResource SubtitleTextBlockStyle}"
                                          Grid.Column="0" />

                                <Ellipse Width="12" Height="12" 
                                        Fill="{Binding SourceVCenterStatusColor}"
                                        Grid.Column="1"
                                        VerticalAlignment="Center" />
                            </Grid>

                            <TextBlock Text="{Binding SourceVCenterAddress}" 
                                      Style="{StaticResource HeaderTextBlockStyle}" />

                            <TextBlock Text="{Binding SourceVCenterStatus}" 
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{Binding SourceVCenterStatusColor}" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="VMs: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="{Binding SourceVMCount}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Hosts: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="{Binding SourceHostCount}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Clusters: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="{Binding SourceClusterCount}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>

                    <!-- Destination vCenter Status -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Destination vCenter" 
                                          Style="{StaticResource SubtitleTextBlockStyle}"
                                          Grid.Column="0" />

                                <Ellipse Width="12" Height="12" 
                                        Fill="{Binding DestinationVCenterStatusColor}"
                                        Grid.Column="1"
                                        VerticalAlignment="Center" />
                            </Grid>

                            <TextBlock Text="{Binding DestinationVCenterAddress}" 
                                      Style="{StaticResource HeaderTextBlockStyle}" />

                            <TextBlock Text="{Binding DestinationVCenterStatus}" 
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{Binding DestinationVCenterStatusColor}" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="VMs: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="{Binding DestinationVMCount}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Hosts: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="{Binding DestinationHostCount}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                                <TextBlock Text=" | Clusters: " Style="{StaticResource CaptionTextBlockStyle}" />
                                <TextBlock Text="{Binding DestinationClusterCount}" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>
                </Grid>

                <!-- Migration Statistics -->
                <ui:Card Style="{StaticResource SectionCard}">
                    <StackPanel>
                        <TextBlock Text="Migration Statistics" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Total Migrations -->
                            <Border Grid.Column="0" 
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,1,0"
                                   Padding="0,0,16,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalMigrations}" 
                                              FontSize="32" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Center"
                                              Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}" />
                                    <TextBlock Text="Total Migrations" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- Successful -->
                            <Border Grid.Column="1" 
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,1,0"
                                   Padding="16,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding SuccessfulMigrations}" 
                                              FontSize="32" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Center"
                                              Foreground="LimeGreen" />
                                    <TextBlock Text="Successful" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- Failed -->
                            <Border Grid.Column="2" 
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="0,0,1,0"
                                   Padding="16,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding FailedMigrations}" 
                                              FontSize="32" 
                                              FontWeight="Bold" 
                                              HorizontalAlignment="Center"
                                              Foreground="OrangeRed" />
                                    <TextBlock Text="Failed" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- In Progress -->
                            <Border Grid.Column="3" 
                                   Padding="16,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding InProgressMigrations}" 
                                                  FontSize="32" 
                                                  FontWeight="Bold"
                                                  Foreground="Orange" />
                                        <ui:ProgressRing Width="20" Height="20" 
                                                        IsIndeterminate="True"
                                                        Margin="8,8,0,0">
                                            <ui:ProgressRing.Visibility>
                                                <Binding Path="InProgressMigrations" Converter="{StaticResource IntToVisibilityConverter}" />
                                            </ui:ProgressRing.Visibility>
                                        </ui:ProgressRing>
                                    </StackPanel>
                                    <TextBlock Text="In Progress" 
                                              Style="{StaticResource CaptionTextBlockStyle}"
                                              HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Current Activity & Recent Migrations -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Current Activity -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Current Activity" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- Active Migrations List -->
                            <ItemsControl ItemsSource="{Binding ActiveMigrations}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Padding="12"
                                               Margin="0,0,0,8">
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding VmName}" 
                                                              Style="{StaticResource HeaderTextBlockStyle}"
                                                              Grid.Column="0" />

                                                    <TextBlock Text="{Binding MigrationType}" 
                                                              Style="{StaticResource CaptionTextBlockStyle}"
                                                              Grid.Column="1"
                                                              VerticalAlignment="Center" />
                                                </Grid>

                                                <ProgressBar Value="{Binding Progress}" 
                                                           Maximum="100"
                                                           Height="8"
                                                           Margin="0,8,0,4" />

                                                <Grid>
                                                    <TextBlock Text="{Binding Status}" 
                                                              Style="{StaticResource CaptionTextBlockStyle}"
                                                              HorizontalAlignment="Left" />
                                                    <TextBlock Text="{Binding TimeRemaining}" 
                                                              Style="{StaticResource CaptionTextBlockStyle}"
                                                              HorizontalAlignment="Right" />
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- No Active Migrations Message -->
                            <TextBlock Text="No active migrations" 
                                      Style="{StaticResource BodyTextBlockStyle}"
                                      HorizontalAlignment="Center"
                                      Margin="0,20,0,0">
                                <TextBlock.Visibility>
                                    <Binding Path="ActiveMigrations.Count" Converter="{StaticResource IntToVisibilityConverter}">
                                        <Binding.ConverterParameter>
                                            <x:Static Member="Visibility.Collapsed" />
                                        </Binding.ConverterParameter>
                                    </Binding>
                                </TextBlock.Visibility>
                            </TextBlock>

                            <ui:Button Content="View All Active" 
                                      Style="{StaticResource SecondaryButton}"
                                      HorizontalAlignment="Left"
                                      Margin="0,12,0,0" />
                        </StackPanel>
                    </ui:Card>

                    <!-- Recent Migrations -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Recent Migrations" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- Recent Items -->
                            <ItemsControl ItemsSource="{Binding RecentMigrations}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Width="8" Height="8" 
                                                    Fill="LimeGreen"
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0" />

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding VmName}" 
                                                          Style="{StaticResource BodyTextBlockStyle}"
                                                          Margin="0" />
                                                <TextBlock Text="{Binding MigrationDate, StringFormat='Completed {0:HH:mm} ago'}" 
                                                          Style="{StaticResource CaptionTextBlockStyle}"
                                                          Margin="0" />
                                            </StackPanel>

                                            <TextBlock Text="Success" 
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="LimeGreen"
                                                      Grid.Column="2"
                                                      VerticalAlignment="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- No Recent Migrations Message -->
                            <TextBlock Text="No recent migrations" 
                                      Style="{StaticResource BodyTextBlockStyle}"
                                      HorizontalAlignment="Center"
                                      Margin="0,20,0,0">
                                <TextBlock.Visibility>
                                    <Binding Path="RecentMigrations.Count" Converter="{StaticResource IntToVisibilityConverter}">
                                        <Binding.ConverterParameter>
                                            <x:Static Member="Visibility.Collapsed" />
                                        </Binding.ConverterParameter>
                                    </Binding>
                                </TextBlock.Visibility>
                            </TextBlock>

                            <ui:Button Content="View Migration History" 
                                      Style="{StaticResource SecondaryButton}"
                                      HorizontalAlignment="Left"
                                      Margin="0,12,0,0" />
                        </StackPanel>
                    </ui:Card>
                </Grid>

                <!-- System Health & Quick Actions -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- System Health -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="0" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="System Health" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <Grid Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- PowerCLI Status -->
                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="PowerCLI" 
                                              Style="{StaticResource HeaderTextBlockStyle}" />
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" 
                                                Fill="LimeGreen"
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0" />
                                        <TextBlock Text="{Binding PowerCLIStatus}" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding PowerCLIVersion, StringFormat='Version {0}'}" 
                                              Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>

                                <!-- Memory Usage -->
                                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                    <TextBlock Text="Memory Usage" 
                                              Style="{StaticResource HeaderTextBlockStyle}" />
                                    <ProgressBar Value="{Binding MemoryUsage}" 
                                               Maximum="100"
                                               Height="8"
                                               Margin="0,4,0,4" />
                                    <TextBlock Text="{Binding MemoryUsageText}" 
                                              Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>

                                <!-- Log Size -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Log Files" 
                                              Style="{StaticResource HeaderTextBlockStyle}" />
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" 
                                                Fill="Orange"
                                                VerticalAlignment="Center"
                                                Margin="0,0,6,0" />
                                        <TextBlock Text="{Binding LogFileSize}" 
                                                  Style="{StaticResource BodyTextBlockStyle}"
                                                  Margin="0" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding LogFileStatus}" 
                                              Style="{StaticResource CaptionTextBlockStyle}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ui:Card>

                    <!-- Quick Actions -->
                    <ui:Card Style="{StaticResource SectionCard}" 
                            Grid.Column="1" 
                            Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" />

                            <StackPanel Margin="0,16,0,0">
                                <ui:Button Content="Test Connections" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Command="{Binding TestConnectionsCommand}"
                                          Margin="0,0,0,8" />

                                <ui:Button Content="Backup Config" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Command="{Binding BackupConfigCommand}"
                                          Margin="0,0,0,8" />

                                <ui:Button Content="View Logs" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8" />

                                <ui:Button Content="Export Report" 
                                          Style="{StaticResource SecondaryButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8" />
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>
                </Grid>

                <!-- Status Bar -->
                <ui:InfoBar Title="System Status" 
                           Message="{Binding StatusMessage}" 
                           IsOpen="True"
                           Margin="0,16,0,0" />

                <!-- Loading Indicator -->
                <ui:ProgressRing IsIndeterminate="True" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Width="50" Height="50"
                                Margin="0,16,0,0" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
