<ui:FluentWindow x:Class="UiDesktopApp2.Views.Windows.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Title="vCenter Migration Tool"
                 Height="720"
                 Width="1280"
                 WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main Navigation -->
        <ui:NavigationView x:Name="NavigationView"
                          PaneDisplayMode="Left">

            <!-- Navigation Menu Items -->
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Dashboard" 
                                      Icon="{ui:SymbolIcon Home24}" />

                <ui:NavigationViewItem Content="Connections" 
                                      Icon="{ui:SymbolIcon Plug24}" />

                <ui:NavigationViewItem Content="Migration" 
                                      Icon="{ui:SymbolIcon ArrowMove24}" />

                <ui:NavigationViewItem Content="Backup" 
                                      Icon="{ui:SymbolIcon Archive24}" />

                <ui:NavigationViewItem Content="Validation" 
                                      Icon="{ui:SymbolIcon CheckmarkCircle24}" />

                <ui:NavigationViewItem Content="Data" 
                                      Icon="{ui:SymbolIcon Database24}" />

                <ui:NavigationViewItem Content="Logs" 
                                      Icon="{ui:SymbolIcon Document24}" />
            </ui:NavigationView.MenuItems>

            <!-- Footer Menu Items -->
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" 
                                      Icon="{ui:SymbolIcon Settings24}" />

                <ui:NavigationViewItem Content="About" 
                                      Icon="{ui:SymbolIcon Info24}" />
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <!-- Main Content Frame (outside NavigationView) -->
        <Frame x:Name="NavigationFrame" 
               NavigationUIVisibility="Hidden"
               Margin="250,0,0,0" />

        <!-- Snackbar for notifications -->
        <ui:SnackbarPresenter x:Name="SnackbarPresenter"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Right"
                             Margin="20" />

        <!-- Simple overlay for dialogs -->
        <Grid x:Name="DialogOverlay" 
              Background="Transparent"
              Visibility="Collapsed"
              Panel.ZIndex="1000">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.5" />
            </Grid.Background>
            <ContentPresenter x:Name="DialogPresenter" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center" />
        </Grid>
    </Grid>
</ui:FluentWindow>
